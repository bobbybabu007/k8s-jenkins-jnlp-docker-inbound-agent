ARG version=4.9-1-jdk11

FROM jenkins/agent:$version

ARG version
LABEL Description="This is a base image, which allows connecting Jenkins agents via JNLP protocols" Vendor="Jenkins project" Version="$version"

ARG user=jenkins

USER root

# Copy agent.jar and symlink it to slave.jar
COPY jenkins-agent /usr/local/bin/jenkins-agent
RUN chmod +x /usr/local/bin/jenkins-agent &&\
    ln -s /usr/local/bin/jenkins-agent /usr/local/bin/jenkins-slave

# Install base tools
RUN apt-get update && apt-get install -y wget curl nano

# Install Maven 3.6.3
RUN wget https://www-us.apache.org/dist/maven/maven-3/3.6.3/binaries/apache-maven-3.6.3-bin.tar.gz -P /tmp && \
    sudo tar xf /tmp/apache-maven-3.6.3-bin.tar.gz -C /opt && \
    sudo ln -s /opt/apache-maven-3.6.3 /opt/maven

# Testing User access
ARG rootspace="/testrootspace"
RUN mkdir ${rootspace} && \
    chown -R 1001:0 ${rootspace} && \
    chmod -R g+rw ${rootspace}

USER ${user}

ARG userspace="/testuserspace"
RUN mkdir ${userspace} && \
    chown -R 1001:0 ${userspace} && \
    chmod -R g+rw ${userspace}

ENTRYPOINT ["/usr/local/bin/jenkins-agent"]